@page
@model ZooBazaarWeb.Pages.ReportModel

<section class="QrSection" style="height:100vh;">
    <div class="container">
        <h5>Report information about @Model.Animal.Name</h5>
        <div class="d-flex justify-content-center text-center " style="flex-direction: column;">
            <form method="post">
                <input type="hidden" name="id" value="@Model.Animal.Id" />
                <br />
                <div class="mt-3">
                    <textarea class="form-control" asp-for="Description" id="exampleFormControlTextarea1" rows="20"></textarea>
                </div>
                <button class="btn btn-primary mt-4">submit</button>
            </form>
        </div>
    </div>
</section>

