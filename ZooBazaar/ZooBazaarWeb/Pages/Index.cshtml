<!-- END section -->
<section class="section testimonial-section">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-7">
                <h2 class="heading" data-aos="fade-up">People Says</h2>
            </div>
        </div>
        <div class="row">
            <div class="js-carousel-2 owl-carousel mb-5" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model.commentManager.GetComments())
                {
                    <div class="testimonial text-center slider-item">
                        <div class="author-image mb-3">
                            <img src="images/person_1.jpg" alt="Image placeholder" class="rounded-circle mx-auto">
                        </div>
                        <blockquote>

                            <p>&ldquo;@item&rdquo;</p>
                        </blockquote>
                    </div>
                }


            </div>
            <!-- END slider -->
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <div class="comment">
                    <p>Give us comment</p>
                    <form asp-page-handler="Comment" method="post">
                        <div class="col-12">
                            @*<textarea name="" id="" cols="30" rows="3" asp-for="Comment"></textarea>*@
                            <input type="text" class="form-control" asp-for="Comment">
                        </div>
                        <div class="col-12">
                            <button class="btn btn-outline-white" type="submit">Send!</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const addBtn = document.querySelector("#increse");
    const minBtn = document.querySelector("#decrese");
    let number = 0;
    const text = document.querySelector("#number");

    const addBtnC = document.querySelector("#increseC");
    const minBtnC = document.querySelector("#decreseC");
    let numberC = 0;
    const textC = document.querySelector("#numberC");

    addBtn.addEventListener('click', function () {

        number = number + 1;

        text.value = number;
    })

    minBtn.addEventListener('click', function () {
        if ((number - 1) >= 0) {
            number = number - 1;
        }

        text.value = number;
    })

    addBtnC.addEventListener('click', function () {

        numberC = numberC + 1;

        textC.value = numberC;
    })

    minBtnC.addEventListener('click', function () {
        if ((numberC - 1) >= 0) {
            numberC = numberC - 1;
        }

        textC.value = numberC;
    })
</script>