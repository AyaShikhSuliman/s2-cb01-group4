@page
@model IndexModel
@if (TempData["Alert"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.options = { "positionClass": "toast-bottom-right" }
        toastr.error('Your ticket will be sent to your email', 'bravo!')
    </script>
}
@{
    ViewData["Title"] = "Home page";
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


<section class="site-hero overlay" data-stellar-background-ratio="0.5" id="section-home">
    <div class="container">
        <div class="row site-hero-inner justify-content-center align-items-center">
            <div class="col-md-10 text-center" data-aos="fade-up">
                <h1 class="heading">Visit our zoo &amp; Enjoy</h1>
            </div>
        </div>
    </div>

    <a class="mouse smoothscroll" href="#section-events">
        <div class="mouse-icon">
            <span class="mouse-wheel"></span>
        </div>
    </a>
</section>
<!-- END section -->

<section class="section  bg-light pb-0" id="section-ticket">
    <form asp-page-handler="Ticket" method="post">
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Email address</label>
                            <input type="email" asp-for="Ticket.Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>
                
            </div>
        </div>
    </div>
    <div class="container">

        <div class="row check-availabilty">
            <div class="col-12">
                <div class="block-32" data-aos="fade-up" data-aos-offset="-200">

                   
                        <div class="input-group mb-3">
                            <button class="btn btn-secondary dropdown-toggle m-auto" type="button" id="dropdownMenuClickable" data-bs-toggle="dropdown" data-bs-auto-close="false" aria-expanded="false">Choose tickets</button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuClickable">
                                <li>
                                    <div class="row">
                                        <div class="col-5"><p>Adult</p></div>
                                        <div class="col-7">
                                            <span><input type="button" value="+" id="increse" /><input type="number" asp-for="Ticket.Adult" id="number" min="0" max="20" /><input type="button" value="-" id="decrese"></span>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-5"><p>Children</p></div>
                                        <div class="col-7">
                                            <span><input type="button" value="+" id="increseC" /><input type="number" asp-for="Ticket.Children" id="numberC" min="0" max="20" /><input type="button" value="-" id="decreseC"></span>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <input type="date" class="form-control" asp-for="Ticket.Date">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary m-auto" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                By ticket
                            </button>

                            <!-- Modal -->

                        </div>
                    
                </div>
            </div>


        </div>
    </div>
    </form>
</section>

