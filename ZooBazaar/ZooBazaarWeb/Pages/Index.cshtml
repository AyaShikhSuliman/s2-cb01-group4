<section class="section bg-image overlay" style="background-image: url('images/live.jpg');">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6 text-center mb-4 mb-md-0 text-md-left" data-aos="fade-up">
                <h2 class="text-white font-weight-bold">Live Cameras at Our Zoo!</h2>
            </div>
